<h2>Question:</h2>
<%= @question.question %>

<h2>Answer:</h2>
<%= @question.answer %>

<h2>Users:</h2>
<ul>
	<% @question.users.each do |user| %>
		<li><%= link_to user.email, user_path(user) %></li>
	<% end %>
</ul>


<%= link_to 'Edit', edit_question_path(@question) %> |
